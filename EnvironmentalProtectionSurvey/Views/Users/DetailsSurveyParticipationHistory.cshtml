@model IEnumerable<EnvironmentalProtectionSurvey.Models.FilledSurveyDetail>

@{
    ViewData["Title"] = "Survey Participation History";
}

<h2>Survey Participation History</h2>

@if (Model != null && Model.Any())
{
    @foreach (var filledSurveyDetails in Model)
    {
        <div>
            @if (!string.IsNullOrEmpty(filledSurveyDetails.QuestionTitle) && !string.IsNullOrEmpty(filledSurveyDetails.OptionTitle))
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@filledSurveyDetails.QuestionTitle</td>
                            <td>@filledSurveyDetails.OptionTitle</td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <p>No questions and options found for this survey.</p>
            }

            <hr />
        </div>
    }
}
else
{
    <p>No filled surveys found for the specified conditions.</p>
}

<a asp-action="Index">Back to Survey List</a>
