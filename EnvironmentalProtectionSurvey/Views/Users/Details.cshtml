@model EnvironmentalProtectionSurvey.Models.User

@{
    ViewData["Title"] = "Details";
}


<head>
   <style>
       a{
           text-decoration: none;
       }
       .btn{
           margin-left: 25%;
       }
   </style>
</head>


<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
        <a class="nav-link active ms-0" asp-action="Details" asp-controller="Users">Profile</a> 
        <a class="nav-link active ms-0" asp-action="SurveyParticipationHistory" asp-asp-controller="Users">Survey Participated</a>
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <p>@ViewBag.msg</p>
                    <p>@ViewBag.updated</p>
                    <p>@ViewBag.thatbai</p>

                    <form asp-action="Details" asp-controller="Users" method="post">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label asp-for="UserName" class="small mb-1" for="inputUsername"></label>
                            <input asp-for="UserName" class="form-control" id="inputUsername" type="text" readonly  value="@Model.UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>

                        <div class="mb-3">
                            <label asp-for="Email"  class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input asp-for="Email" class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="@Model.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label asp-for="NumberCode"  class="small mb-1" for="inputFirstName">Number Code</label>
                                <input asp-for="NumberCode" class="form-control" id="inputFirstName" type="text" placeholder="Enter your number code" value="@Model.NumberCode">
                                <span asp-validation-for="NumberCode" class="text-danger"></span>

                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label asp-for="Class"  class="small mb-1" for="inputLastName">Class/Department</label>
                                <input asp-for="Class" class="form-control" id="inputLastName" type="text" placeholder="Enter your class" value="@Model.Class">
                                <span asp-validation-for="Class" class="text-danger"></span>

                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label asp-for="Specification" class="small mb-1" for="inputOrgName">Specification</label>
                                <input asp-for="Specification" class="form-control" id="inputOrgName" type="text" placeholder="Enter your Specification" value="@Model.Specification">
                                <span asp-validation-for="Specification" class="text-danger"></span>

                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label asp-for="Section"  class="small mb-1" for="inputLocation">Section</label>
                                <input asp-for="Section" class="form-control" id="inputLocation" type="text" placeholder="Enter your section" value="@Model.Section">
                                <span asp-validation-for="Section" class="text-danger"></span>

                            </div>
                        </div>
                        @Html.ActionLink("Back to home", "Index", "Home")
                        <button class="btn btn-primary" type="submit" name="btn" value="Save">Save changes</button>
                        <hr />

                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label asp-for="Password" class="small mb-1" for="inputFirstName">Current Password</label>
                                <input name="password" class="form-control" id="inputFirstName" type="text" placeholder="Enter your current password" required>
                            </div>
                            <p style="color: red">@ViewBag.failsPass</p>
                            <p style="color:yellow">@ViewBag.updatedPass</p>

                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">New Password</label>
                                <input name="newPassword" class="form-control" id="inputOrgName" type="text" placeholder="Enter your new password" required>
                                <span asp-validation-for="Specification" class="text-danger"></span>
                                <p style="color:red">@ViewBag.err</p>
                            </div>

                        </div>

                       
                        <!-- Save changes button-->
                        @Html.ActionLink("Back to home", "Index", "Home")
                        <button class="btn btn-primary" type="submit" name="btn" value="ResetPassword">Reset Password</button>
                    </form>
                    <hr />
                   
                </div>
            </div>
        </div>
    </div>
</div>